@model UserInfo
@{
    ViewBag.Title ="Başvuru Detay Sayfası";
}

@{
    var className = @Model.WillAttend == true ? "primary":"danger";
    var willAttend = @Model.WillAttend == true ? "Katılıyor" : "Katılmıyor";
}
<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
    <p>
        <span class="badge text-bg-@className">@willAttend</span>
    </p>
    <p>İsim : @Model.Name</p>
    <p>Telefon : @Model.Phone</p>
    <p>E Posta : @Model.Email</p>
    <a class="btn btn-outline-@className" asp-controller="Meeting" asp-action="List">Katılımcı Listesi</a>
</main>