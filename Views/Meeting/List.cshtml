@model List<UserInfo>

@{
    ViewBag.Title = "Katılımcı Listesi";
}
<h1 class="h4">Toplantı Katılım Listesi</h1>
<table class="table table-bordered text-center ">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
            <td>Detay</td>
        </tr>
    </thead>
    @{
        int i = 0;
    }
    <tbody>
        @foreach(var u in Model)
        {
            var durum = u.WillAttend == true ? "Evet" : "Hayır";
            var className = u.WillAttend == true ? "table-success":"table-danger";
            if(u.WillAttend == true)
            {
                i++;
            }
            <tr class="@className">
                <td>@u.Name</td>
                <td>@durum</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="/meeting/details/@u.Id">Detay</a>
                </td>
            </tr>
        }
    </tbody>  
</table>
<div class="card">
    <div class="card-body">
        <span>Katılımcı Sayısı @i</span>
    </div>
</div>